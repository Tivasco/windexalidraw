{
  "name": "windexcalidraw",
  "version": "1.0.0",
  "private": true,
  "description": "A collaborative drawing application built with Excalidraw and React",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "init-db": "node src/database/initDb.js",
    "verify-db": "node src/database/verifyConnection.js",
    "start-api": "node src/server/api.js",
    "check-api": "node src/utils/apiStatus.js",
    "start": "concurrently --names \"FRONTEND,API\" --prefix-colors \"blue,green\" \"npm run dev\" \"npm run start-api\"",
    "start-docker": "concurrently --names \"FRONTEND,API\" --prefix-colors \"blue,green\" \"vite --host 0.0.0.0\" \"npm run start-api\""
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@keycloak/keycloak-admin-client": "^26.1.4",
    "@tanstack/react-query": "^5.68.0",
    "@types/node": "^22.13.10",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "i18next": "^24.2.3",
    "jsonwebtoken": "^9.0.2",
    "keycloak-js": "^26.1.4",
    "mysql2": "^3.13.0",
    "nanoid": "^5.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.4.1",
    "react-router-dom": "^7.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^4.8.4",
    "vite": "^4.0.0"
  }
}
